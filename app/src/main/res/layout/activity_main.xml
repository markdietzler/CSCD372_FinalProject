<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbbbbbb"
    android:paddingLeft="10.0dip"
    android:paddingTop="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingBottom="10.0dip"
    tools:context=".MainActivity">

    <View
        android:id="@+id/gameView"
        class="com.example.cscd372_breakout_game.BreakOutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:padding="10.0dip"
        android:layout_toLeftOf="@+id/left"
        android:layout_toRightOf="@+id/right"
        android:layout_above="@+id/statusView"
        android:layout_centerInParent="true"/>

    <TextView android:textSize="24.0sp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level=1 Balls=3 Score=0 Bricks=5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View android:id="@+id/left"
        android:background="@drawable/simple_circle"
        android:layout_width="65.0dip"
        android:layout_height="65.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <View android:id="@+id/right"
        android:background="@drawable/simple_circle"
        android:layout_width="65.0dip"
        android:layout_height="65.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>